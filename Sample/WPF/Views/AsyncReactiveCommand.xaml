<Window
    x:Class="WPF.Views.AsyncReactiveCommand"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:Sample.ViewModels;assembly=Sample.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AsyncReactiveCommand"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Window.DataContext>
        <ViewModels:AsyncReactiveCommandViewModel />
    </Window.DataContext>
    <StackPanel>
        <Button Command="{Binding HeavyProcessCommand}" Content="Heavy process" />
        <Separator />
        <Button Command="{Binding ShareSourceCommand1}" Content="Share source 1" />
        <Button Command="{Binding ShareSourceCommand2}" Content="Share source 2" />
    </StackPanel>
</Window>